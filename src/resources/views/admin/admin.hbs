</nav>

<main class="main">
  <div class="container">
    <table>
      <thead>
        <tr>
          <th class="table__rank">Số Thứ Tự</th>
          <th class="table__user-name">Tên Người Dùng</th>
          <th class="table__password">Mật Khẩu</th>
          <th class="table__check">Admin</th>
          <th class="table__control">Thao Tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td class="table__rank">{{sum @index 1}}</td>
          <td class="table__user-name"><i class="fa-solid fa-user"></i>
            {{this.username}}
          </td>
          <td class="table__password">{{this.password}}</td>
          <td class="table__check">{{this.admin}}</td>
          <td class="table__delete-user">
            <a href="/admin/deleteuser/{{this._id}}" id="#delete-user">Xóa người dùng</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</main>