<nav class="nav__bar">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <ul class="nav__menu">
          <li class="nav__menu-item"><a href="/admin/article">Quản Lý Bài
              Viết</a></li>
          <li class="nav__menu-item"><a href="/logout">Đăng Xuất</a></li>
        </ul>
      </div>
    </div>
