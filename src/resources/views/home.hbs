<div class="banner">
    <img src="image/banner.png" alt="">
</div>
<!-- Body1 -->
<div class="content">
    <div class="content__left-wrapper">  
        <div class="content__body-list">
            <div class="content__body-item item1">
                {{#with data1.[0]}}
                    <a href="/{{tag}}/{{slug}}"><img src="{{image}}" alt=""></a>
                    <a href="/{{tag}}/{{slug}}">{{title}}</a>
                    <p>{{description}}</p>
                {{/with}}
            </div>
            <div class="content__body-item item2">
                {{#with data2.[0]}}
                    <a href="/{{tag}}/{{slug}}"><img src="{{image}}" alt=""></a>
                    <div>
                        <a href="/{{tag}}/{{slug}}">{{title}}</a>
                    </div>
                {{/with}}
            </div>
        </div>

        <div class="slider">
            <div class="slider-nav">
                <i class='bx bx-chevron-left btnLeft'></i>
                <i class='bx bx-chevron-right btnRight'></i>
            </div>

            <div class="slider-box">
                {{#each_from_to data3 0 5}}
                <div class="box">
                    <a href="/{{this.tag}}/{{this.slug}}"><img src="{{this.image}}" alt=""></a>
                    <a href="/{{this.tag}}/{{this.slug}}"><p>{{this.title}}</p></a>
                </div>
                {{/each_from_to}}
            </div>
            <div style="text-align:center">
                <span class="dot active" onclick="plusSlides(0)"></span>
                <span class="dot" onclick="plusSlides(1)"></span>
                <span class="dot" onclick="plusSlides(2)"></span>
                <span class="dot" onclick="plusSlides(3)"></span>
            </div>
        </div>

        <div class="horizontal">
            {{#each_from_to data4 0 3}}
            <ul class="horizontal__news-list">
                <li class="horizontal__news-items">
                    <a href="/{{this.tag}}/{{this.slug}}" class="horizontal__news-link">
                        <img src="{{this.image}}" alt="" class="header__notify-img">
                        <div class="horizontal__news-info">
                            <span class="horizontal__news-name">{{this.title}}</span>
                            <span class="horizontal__news-content">{{this.description}}</span>
                        </div>
                    </a>
                </li>
            </ul>
            {{/each_from_to}}
        </div>
    </div>
    <div class="content__right-wrapper">
        <div class="content__body-img">
            <img src="image/banner1.png" alt="">
            <img src="image/banner1.png" alt="">

        </div>
    </div>


</div>
<!-- Trend -->
